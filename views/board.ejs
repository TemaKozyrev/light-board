<!DOCTYPE html>
<html lang="en">
<head>
    <% include head.ejs %>
</head>
<body>

<header>
    <% include header.ejs %>
</header>

<main>
    <div class="container jumbotron">
        <div class="row">
            <% offers.forEach(function (item) { %>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="/uploads/<%=item.imgUrl%>">
                    <div class="caption">
                        <h3><%=item.title%></h3>
                        <p><%=item.ShortDescription%></p>
                        <p><a href="#" class="btn btn-primary" role="button">Read more</a></p>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>


</main>


</body>
</html>