<!DOCTYPE html>
<html lang="en">
<head>
    <% include head.ejs %>
    <link rel="stylesheet" href="/stylesheets/profile.css">
</head>
<body>

<header>
    <% include header.ejs %>
</header>

<main>
    <div class="container">
        <div class="jumbotron">
            <div class="row">
                <div class="col-md-4">
                    <h1><%= user.username %></h1>
                    <p><%= user.email %></p>
                    <p><img class="img-thumbnail" src="/uploads/<%= user.avatarUrl %>"></p>
                    <p>Change password:</p>

                    <form action="/account/changepass" method="post">
                        <div class="form-group">
                            <p><input type="password" class="form-control" placeholder="New password" name="newpass">
                            </p>
                            <p><input type="password" class="form-control" placeholder="Old password" name="oldpass">
                            </p>
                        </div>
                        <p>
                            <button type="submit" class="btn btn-primary">Change password</button>
                        </p>
                    </form>

                    <p>
                        <% if (valid != null) { %>
                        <% if (valid == true) { %>
                    <div class="alert alert-success" role="alert">Password changed</div>
                    <% } else if (valid == false) { %>
                    <div class="alert alert-danger" role="alert">Incorrect old password</div>
                    <% } %>
                    <% } %>
                    </p>
                </div>

                <div class="col-md-8">
                    <form action="/offer/create" method="post" enctype="multipart/form-data">
                        <h1>Create new offer:</h1>

                        <div class="form-group">
                            <label for="SelectCategory">Select category:</label>
                            <select class="form-control" id="SelectCategory" name="catname">
                                <% cat.forEach(function (item) { %>
                                <option value="<%= item.name %>"><%= item.name %></option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="InputOfferName">Offer name:</label>
                            <input class="form-control" id="InputOfferName" placeholder="Offer name" name="oname">
                        </div>

                        <div class="form-group">
                            <label for="InputShortDesc">Short description:</label>
                            <input class="form-control" id="InputShortDesc" placeholder="Short description"
                                   name="sdesc" maxlength="250">
                        </div>

                        <div class="form-group">
                            <label for="InputtDesc">Description:</label>
                            <textarea class="form-control" id="InputtDesc" rows="5" placeholder="Description"
                                      name="desc"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="InputFile">Upload image</label>
                            <input type="file" id="InputFile" name="image">
                        </div>

                        <button type="submit" class="btn btn-primary">Create</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <h1>Your active offers:</h1>
        <div class="row">
            <% offers.forEach(function (item) {  %>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="/uploads/<%= item.imgUrl %>">
                    <div class="caption">
                        <h3><%= item.title %></h3>
                        <p><%= item.ShortDescription %></p>
                        <p><a href="/offer/delete/?offer_id=<%=item._id%>" class="btn btn-danger" role="button">Delete</a></p>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>


</main>


</body>
</html>